// https://code.visualstudio.com/docs/getstarted/keybindings
[
  {
    "command": "dendron.lookupNote",
    "key": "ctrl+l",
    "when": "dendron:pluginActive",
    "args": {
      // https://wiki.dendron.so/notes/ad270a7d-2aed-4273-8319-eb6536e38b29/
      "selectionType": "selectionExtract"
    }
  },
  {
    "command": "vscode-neovim.send-blocking",
    "key": "k",
    "when": "neovim.mode == insert && editorTextFocus",
    "args": "k"
  },
  {
    "command": "vscode-neovim.send-blocking",
    "key": "j",
    "when": "neovim.mode == insert && editorTextFocus",
    "args": "j"
  },
  {
    "key": "9 h",
    "command": "dendron.goNextHierarchy",
    "when": "dendron:pluginActive && editorTextFocus && neovim.mode != insert",
  },
  {
    "key": "8 h",
    "command": "dendron.goPrevHierarchy",
    "when": "dendron:pluginActive && editorTextFocus && neovim.mode != insert",
  }
]
