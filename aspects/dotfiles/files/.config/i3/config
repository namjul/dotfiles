# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+u restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym h resize shrink width 20 px or 20 ppt
    bindsym k resize grow height 20 px or 20 ppt
    bindsym j resize shrink height 20 px or 20 ppt
    bindsym l resize grow width 20 px or 20 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 20 px or 20 ppt
    bindsym Down resize grow height 20 px or 20 ppt
    bindsym Up resize shrink height 20 px or 20 ppt
    bindsym Right resize grow width 20 px or 20 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

## Manual management of external displays
# Set the shortcuts and what they do
set $mode_display Ext Screen (m) mobile, (d) docked home, (Shift+d) docked office
mode "$mode_display" {

    bindsym m exec --no-startup-id autorandr mobile, mode "default"
    bindsym d exec --no-startup-id autorandr dockedhome, mode "default"
    bindsym Shift+d exec --no-startup-id autorandr dockedoffice, mode "default"

    # bindsym v exec --no-startup-id xrandr --output DP1 --auto --above eDP1, mode "default"
    # bindsym h exec --no-startup-id xrandr --output DP1-2 --auto --above eDP1, mode "default"
    # bindsym x exec --no-startup-id xrandr --output DP1 --auto --off, mode "default"
    # bindsym y exec --no-startup-id xrandr --output DP1-2 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_display"

set $Locker i3lock -c 000000 && sleep 1

set $mode_system System (l) lock, (e) logout, (s) suspend, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$mode_system"

