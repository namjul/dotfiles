# Keybindings

# lear all defaults
keybind=clear

keybind = ctrl+space>r=reset
keybind = ctrl+space>e=write_screen_file:paste
keybind = ctrl+space>r=reload_config
keybind = ctrl+shift+i=inspector:toggle

keybind = ctrl+space>i=paste_from_selection
keybind = shift+insert=paste_from_selection
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+insert=copy_to_clipboard

keybind = ctrl+shift+a=select_all

keybind = shift+up=adjust_selection:up
keybind = shift+left=adjust_selection:left
keybind = shift+right=adjust_selection:right
keybind = shift+down=adjust_selection:down

keybind = ctrl+0=reset_font_size
keybind = ctrl++=increase_font_size:1
keybind = ctrl+-=decrease_font_size:1

# Change control+I to F6
keybind = ctrl+i=text:\x1b[17~

