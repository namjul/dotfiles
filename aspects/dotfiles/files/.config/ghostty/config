resize-overlay = never

# Other Settings
confirm-close-surface = false
shell-integration-features = cursor,sudo,no-title

# Keybindings
keybind = ctrl+space>h=goto_split:left
keybind = ctrl+space>j=goto_split:down
keybind = ctrl+space>k=goto_split:up
keybind = ctrl+space>l=goto_split:right

keybind = ctrl+r>h=resize_split:left,200
keybind = ctrl+r>j=resize_split:down,200
keybind = ctrl+r>k=resize_split:up,200
keybind = ctrl+r>l=resize_split:right,200

keybind = ctrl+[=scroll_page_fractional:-0.5
keybind = ctrl+]=scroll_page_fractional:+0.5

keybind = ctrl+space>-=new_split:up
keybind = ctrl+space>|=new_split:left
keybind = ctrl+space><=new_split:left
keybind = ctrl+space>z=toggle_split_zoom

keybind = ctrl+space>c=new_tab
keybind = ctrl+space>n=next_tab
keybind = ctrl+space>p=previous_tab

keybind = ctrl+space>x=close_surface
keybind = ctrl+space>r=reset
keybind = ctrl+space>e=write_screen_file:paste
keybind = super+r=reload_config
